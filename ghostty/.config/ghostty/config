font-size = 16
maximize = true
window-decoration = none
shell-integration = fish

# Make Option behave like Alt for terminal apps (Zellij, readline, etc).
# Using `left` keeps the right Option key free for macOS unicode input.
macos-option-as-alt = left

# Optional local overrides (not tracked). Create alongside this file if needed.
config-file = "?config.local"

# Unbind CMD+... keys so they will be forwarded to Zellij
keybind = cmd+t=unbind
keybind = cmd+n=unbind
keybind = cmd+c=unbind
# keybind = cmd+w=unbind
keybind = cmd+opt+left=unbind
keybind = cmd+opt+right=unbind
